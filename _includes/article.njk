---
layout: base.njk
---

{% set previousUrl = "" %}
{% set nextUrl  = "" %}
{%- for article in collections.article -%}
    {% if article.url != page.url %}
        {% if article.data.next and article.data.next == page.fileSlug %}
            {% set previousUrl = article.url %}
        {% endif %}

        {% if next and article.fileSlug == next %}
            {% set nextUrl = article.url %}
        {% endif %}
    {% endif %}
{%- endfor -%}

<main>
    <article>
        {% if previousUrl %}
            <nav class="pagination previous">
                <a class="button floating circle" href={{ previousUrl }}>←<span class="sr-only"> Previous Article</span></a>
            </nav>
        {% endif %}
        <h1>{{title}}</h1>
        {{ content | safe }}
        {% if nextUrl %}
            <nav class="pagination next">
                <a class="button floating circle" href={{ nextUrl }}>→<span class="sr-only"> Next Article</span></a>
            </nav>
        {% endif %}
    </article>
</main>
